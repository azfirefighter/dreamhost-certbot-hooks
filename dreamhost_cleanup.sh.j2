#!/bin/bash

API_KEY="{{ DREAMHOST_API_KEY }}"

DOMAIN=$(expr match "$CERTBOT_DOMAIN" '.*\.\(.*\..*\)')

UUID=$(uuidgen)
recordName="_acme-challenge.${CERTBOT_DOMAIN}"
recordValue="${CERTBOT_VALIDATION}"

curl -sS "https://api.dreamhost.com/?cmd=dns-remove_record&type=TXT&value=${recordValue}&record=${recordName}&key=${API_KEY}&unique_id=${UUID}"
